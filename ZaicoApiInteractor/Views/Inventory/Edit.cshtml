@model Item

@{
    ViewData["Title"] = "Edit Item";
}

<h2>Edit Item</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id" />
    <input type="hidden" asp-for="created_at" />

    <div class="form-group">
        <label asp-for="title"></label>
        <input asp-for="title" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="quantity"></label>
        <input asp-for="quantity" class="form-control" type="number" required />
    </div>

    <div class="form-group">
        <label asp-for="place"></label>
        <input asp-for="place" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a href="@Url.Action("Index", "Inventory")" class="btn btn-secondary mt-2">Cancel</a>
</form>
